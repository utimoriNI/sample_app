<%if object.errors.any?%>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%=pluralize(object.errors.count, "error")%>
    </div>
    <ul>
      <% object.errors.full_messages.each do |mag| %>
        <li><%=mag%></li>
      <%end%>
    </ul>
  </div>
<% end %>